<!doctype html>
<html lang="en" ng-app="app">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{{site.title}}</title>
        <link rel="stylesheet" href="{{site.rootPath}}/css/app.css" />
        <script src="{{site.rootPath}}/app/app.js"></script>
        <link rel="stylesheet" href="{{site.rootPath}}/font-awesome/css/font-awesome.min.css">

    </head>
    <body ng-class="{'article-page' : $state.current.name !== 'gallery', 'suppress-animation': isAnimationSuppressed()}" resize>

        {{> icons}}

        <header class="header">
            <h1 class="logo">
                <a class="logo-link" href="/#/">
                    <svg viewBox="0 0 80 80">
                        <use xlink:href="#logo"></use>
                    </svg>
                </a>
            </h1>
            <div class="social-links">
                <a href="https://www.linkedin.com/in/weiweihsu">
                    <svg viewBox="0 0 80 80">
                        <use xlink:href="#linkedin"></use>
                    </svg>
                </a>
                <a href="https://twitter.com/@weiweihsu_">
                    <svg viewBox="0 0 80 80">
                        <use xlink:href="#twitter"></use>
                    </svg>
                </a>
            </div>
        </header>

        <div class="gallery" id="gallery" ng-controller="galleryController" js-gallery>
            <div class="gallery-wrap" id="gallery-wrap">
                {{#each gallery.pieces}}<a
                    ng-href="/#{{this.slug}}"
                    class="gallery-piece"
                    id="{{this.slug}}"
                    ng-class="{'active': '{{this.slug}}' == $state.current.name}"
                    style="background-color: #{{this.color}}"
                    js-launch>
                    <div
                        class="piece-image"
                        js-load-image load-image-url="'/assets/img/{{this.background}}'">
                    </div>
                    <div class="piece-title">
                        <div class="piece-category">{{this.category}}</div>
                        <h2>{{this.title}}</h2>
                    </div>
                </a>{{/each}}
            </div>
        </div>

        <div class="main">
            <div ui-view></div>
        </div>

        <div class="footer">

        </div>

        <script src="//localhost:35729/livereload.js"></script>

        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-34376835-1', 'auto');
            ga('send', 'pageview');
        </script>

  </body>
</html>
